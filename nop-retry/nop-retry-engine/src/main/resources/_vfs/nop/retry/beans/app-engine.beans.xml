<?xml version="1.0" encoding="UTF-8" ?>
<beans x:schema="/nop/schema/beans.xdef" xmlns:x="/nop/schema/xdsl.xdef"
       xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <import resource="_dao.beans.xml"/>

    <import resource="_engine.beans.xml"/>

    <!-- Retry Record Store -->
    <bean id="io.nop.retry.engine.store.IRetryRecordStore"
          class="io.nop.retry.engine.store.RetryRecordStoreImpl"/>

    <!-- Retry Scanner -->
    <bean id="io.nop.retry.engine.scanner.IRetryScanner"
          class="io.nop.retry.engine.scanner.RetryScannerImpl"/>

    <!-- Retry Engine -->
    <bean id="io.nop.retry.engine.impl.RetryEngineImpl"
          class="io.nop.retry.engine.impl.RetryEngineImpl"/>
</beans>
