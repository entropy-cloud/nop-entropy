       xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <import resource="_dao.beans.xml"/>

    <import resource="_service.beans.xml"/>

    <!-- Retry Service -->
    <bean id="io.nop.retry.service.store.IRetryRecordStore"
          class="io.nop.retry.service.store.RetryRecordStoreImpl"/>

    <bean id="io.nop.retry.service.scanner.IRetryScanner"
          class="io.nop.retry.service.scanner.RetryScannerImpl"/>

    <bean id="io.nop.retry.service.impl.RetryServiceImpl"
          class="io.nop.retry.service.impl.RetryServiceImpl"/>
</beans>