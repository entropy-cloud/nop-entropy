<meta ref="/test/test-filter.xdef#FilterCondition" x:schema="/nop/schema/xmeta.xdef" xmlns:x="/nop/schema/xdsl.xdef"
      xmlName="filter">
    <defines>
        <define name="FilterCondition" type="io.nop.api.support.beans.TreeBean">
            <props>
                <prop name="$type" xmlPos="tag">
                    <schema stdDomain="string"/>
                </prop>
                <prop name="$body" xmlPos="child">
                    <schema type="java.util.List&lt;io.nop.api.support.beans.TreeBean&gt;">
                        <item subTypeOf="$type">
                            <oneOf>
                                <schema ref="/test/test-filter.xdef#SimpleFilterNode" typeValue="timeBetween">
                                    <description>时间在指定范围之内</description>
                                    <props>
                                        <prop name="excludeMax">
                                            <schema stdDomain="boolean"/>
                                        </prop>
                                        <prop name="excludeMin">
                                            <schema stdDomain="boolean"/>
                                        </prop>
                                        <prop name="min">
                                            <schema stdDomain="time"/>
                                        </prop>
                                        <prop name="max">
                                            <schema stdDomain="time"/>
                                        </prop>
                                        <prop name="name" mandatory="true">
                                            <schema stdDomain="string"/>
                                        </prop>
                                        <prop name="$type" xmlPos="tag">
                                            <schema stdDomain="string"/>
                                        </prop>
                                    </props>
                                </schema>
                                <schema ref="/test/test-filter.xdef#FilterCondition" typeValue="or">
                                    <props>
                                        <prop name="$type" xmlPos="tag">
                                            <schema stdDomain="string"/>
                                        </prop>
                                    </props>
                                </schema>
                                <schema ref="/test/test-filter.xdef#FilterCondition" typeValue="and">
                                    <props>
                                        <prop name="$type" xmlPos="tag">
                                            <schema stdDomain="string"/>
                                        </prop>
                                    </props>
                                </schema>
                                <schema ref="/test/test-filter.xdef#SimpleFilterNode" typeValue="lt">
                                    <description>小于</description>
                                    <props>
                                        <prop name="name" mandatory="true">
                                            <schema stdDomain="string"/>
                                        </prop>
                                        <prop name="value">
                                            <schema stdDomain="number"/>
                                        </prop>
                                        <prop name="$type" xmlPos="tag">
                                            <schema stdDomain="string"/>
                                        </prop>
                                    </props>
                                </schema>
                                <schema ref="/test/test-filter.xdef#SimpleFilterNode" typeValue="*">
                                    <props>
                                        <prop name="$type" xmlPos="tag">
                                            <schema stdDomain="string"/>
                                        </prop>
                                    </props>
                                    <unknownAttr stdDomain="any"/>
                                </schema>
                            </oneOf>
                        </item>
                    </schema>
                </prop>
            </props>
        </define>
        <define name="SimpleFilterNode" type="io.nop.api.support.beans.TreeBean">
            <props>
                <prop name="$type" xmlPos="tag">
                    <schema stdDomain="string"/>
                </prop>
            </props>
        </define>
    </defines>
    <props/>
</meta>