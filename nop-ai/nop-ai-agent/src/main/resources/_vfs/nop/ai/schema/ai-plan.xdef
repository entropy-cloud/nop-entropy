<plan x:schema="/nop/schema/xdef.xdef" xmlns:x="/nop/schema/xdsl.xdef" xmlns:xdef="/nop/schema/xdef.xdef">
    <description>markdown-text</description>

    <steps xdef:body-type="list" xdef:key-attr="name">
        <step name="!short-english-name" stepStatus="enum:WAITING|PROCESSING|FINISHED|ERROR">
            <description xdef:mandatory="true">markdown-text</description>
            <instructions>markdown-text</instructions>

            <notes xdef:body-type="list" xdef:key-attr="name">
                <note name="!short-english-name">markdown-text</note>
            </notes>
        </step>
    </steps>

    <notes xdef:body-type="list" xdef:key-attr="name">
        <note name="!short-english-name">markdown-text</note>
    </notes>
</plan>
