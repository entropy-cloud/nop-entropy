<?xml version="1.0" encoding="UTF-8" ?>
<view x:schema="/nop/schema/xui/xview.xdef" bizObjName="NopWfDefinition" xmlns:i18n-en="i18n-en"
      xmlns:x="/nop/schema/xdsl.xdef" xmlns:j="j" xmlns:c="c" xmlns:gql="gql" xmlns:view-gen="view-gen" xmlns:xpl="xpl">

    <objMeta>/nop/wf/model/NopWfDefinition/NopWfDefinition.xmeta</objMeta>

    <controlLib>/nop/web/xlib/control.xlib</controlLib>

    <x:gen-extends>
        <view-gen:DefaultViewGenExtends xpl:lib="/nop/web/xlib/view-gen.xlib"/>
    </x:gen-extends>

    <x:post-extends>
        <view-gen:DefaultViewPostExtends xpl:lib="/nop/web/xlib/view-gen.xlib"/>
    </x:post-extends>

    <grids>
        <grid id="list" x:abstract="true">
            <cols>

                <!--工作流名称-->
                <col id="wfName" mandatory="true" sortable="true"/>

                <!--工作流版本-->
                <col id="wfVersion" mandatory="true" ui:number="true" sortable="true"/>

                <!--显示名称-->
                <col id="displayName" mandatory="true" sortable="true"/>

                <!--描述-->
                <col id="description" sortable="true" x:abstract="true"/>

                <!--关联表单路径-->
                <col id="formPath" sortable="true"/>

                <!--状态-->
                <col id="status" mandatory="true" ui:number="true" sortable="true"/>

                <!--发布人-->
                <col id="publishedBy" sortable="true"/>

                <!--发布时间-->
                <col id="publishTime" sortable="true"/>

                <!--归档人-->
                <col id="archivedBy" sortable="true"/>

                <!--归档时间-->
                <col id="archiveTime" sortable="true"/>

                <!--是否已废弃-->
                <col id="isDeprecated" mandatory="true" sortable="true"/>

                <!--创建人-->
                <col id="createdBy" mandatory="true" sortable="true"/>

                <!--创建时间-->
                <col id="createTime" mandatory="true" sortable="true"/>

                <!--修改人-->
                <col id="updatedBy" mandatory="true" sortable="true"/>

                <!--修改时间-->
                <col id="updateTime" mandatory="true" sortable="true"/>

                <!--备注-->
                <col id="remark" sortable="true"/>
            </cols>
        </grid>
        <grid id="pick-list" x:prototype="list" x:abstract="true"/>
    </grids>

    <forms>
        <form id="view" editMode="view" title="查看-工作流模型定义" i18n-en:title="View Worflow Definition">
            <layout>
 wfName[工作流名称] wfVersion[工作流版本]
 displayName[显示名称] description[描述]
 formPath[关联表单路径] status[状态]
 publishedBy[发布人] publishTime[发布时间]
 archivedBy[归档人] archiveTime[归档时间]
 isDeprecated[是否已废弃] createdBy[创建人]
 createTime[创建时间] updatedBy[修改人]
 updateTime[修改时间] 
                remark[备注]
</layout>
        </form>
        <form id="add" editMode="add" title="新增-工作流模型定义" i18n-en:title="Add Worflow Definition" x:prototype="edit"/>
        <form id="edit" editMode="edit" title="编辑-工作流模型定义" i18n-en:title="Edit Worflow Definition">
            <layout>
 wfName[工作流名称] wfVersion[工作流版本]
 displayName[显示名称] description[描述]
 formPath[关联表单路径] status[状态]
 publishedBy[发布人] publishTime[发布时间]
 archivedBy[归档人] archiveTime[归档时间]
 isDeprecated[是否已废弃] 
                remark[备注]
</layout>
        </form>
        <form id="query" editMode="query" title="查询条件" i18n-en:title="Query Condition" x:abstract="true"/>
        <form id="asideFilter" editMode="query" x:abstract="true" submitOnChange="true"/>
        <form id="batchUpdate" editMode="edit" x:abstract="true" title="修改-工作流模型定义"
              i18n-en:title="Update Worflow Definition"/>
    </forms>

    <pages>
        <crud name="view-list" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:NopWfDefinition__findPage" gql:selection="{@pageSelection}"/>
            </table>
        </crud>
        <crud name="main" grid="list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table autoFillHeight="true">
                <api url="@query:NopWfDefinition__findPage" gql:selection="{@pageSelection}"/>
            </table>
            <listActions>
                <action id="batch-delete-button" label="@i18n:common.batchDelete" batch="true">
                    <api url="@mutation:NopWfDefinition__batchDelete?ids=$ids"/>
                    <confirmText>@i18n:common.confirmBatchDelete</confirmText>
                </action>
                <action id="add-button" level="primary" label="@i18n:common.add" icon="fa fa-plus pull-left">
                    <dialog page="add"/>
                </action>
            </listActions>
            <rowActions>
                <action id="row-view-button" level="primary" label="@i18n:common.view">
                    <dialog page="view"/>
                </action>
                <action id="row-update-button" level="primary" label="@i18n:common.edit" x:abstract="true">
                    <dialog page="update"/>
                </action>
                <action id="row-delete-button" level="danger" label="@i18n:common.delete" x:abstract="true">
                    <api url="@mutation:NopWfDefinition__delete?id=$id"/>
                    <confirmText>@i18n:common.confirmDelete</confirmText>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-update-button" label="@i18n:common.edit">
                        <dialog page="update"/>
                    </action>
                    <action id="row-delete-button" label="@i18n:common.delete">
                        <api url="@mutation:NopWfDefinition__delete?id=$id"/>
                        <confirmText>@i18n:common.confirmDelete</confirmText>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker" grid="pick-list" asideFilterForm="asideFilter" filterForm="query" x:abstract="true">
            <table noOperations="true">
                <api url="@query:NopWfDefinition__findPage" gql:selection="{@pageSelection}"/>
            </table>
        </picker>
        <simple name="add" form="add">
            <api url="@mutation:NopWfDefinition__save/id"/>
        </simple>
        <simple name="view" form="view">
            <initApi url="@query:NopWfDefinition__get?id=$id" gql:selection="{@formSelection}"/>
        </simple>
        <simple name="update" form="edit">
            <initApi url="@query:NopWfDefinition__get?id=$id" gql:selection="{@formSelection}"/>
            <api url="@mutation:NopWfDefinition__update/id?id=$id" withFormData="true"/>
        </simple>
    </pages>
</view>